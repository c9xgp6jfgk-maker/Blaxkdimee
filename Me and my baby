<script>
  const heartsContainer = document.getElementById('hearts');

  // Generate floating hearts
  for(let i=0; i<30; i++){
    const heart = document.createElement('div');
    heart.classList.add('heart');
    heart.style.left = Math.random() * 100 + 'vw';
    heart.style.animationDuration = (5 + Math.random() * 10) + 's';
    heart.style.width = 10 + Math.random() * 20 + 'px';
    heart.style.height = heart.style.width;
    heartsContainer.appendChild(heart);

    // Make hearts pop on click
    heart.addEventListener('click', () => {
      heart.style.transition = 'transform 0.3s, opacity 0.3s';
      heart.style.transform = 'scale(2)';
      heart.style.opacity = '0';
      setTimeout(() => {
        heart.style.transform = 'scale(1)';
        heart.style.opacity = '1';
      }, 500);
    });
  }

  // Enter site function
  function enterSite() {
    document.getElementById('welcomeScreen').style.display = 'none';
    document.getElementById('mainContent').style.display = 'block';
    typeLoveLetter();
  }

  // Typing effect for love letter
  const loveText = `Hey my princess, these past three months together have been nothing short of magical. You‚Äôve filled my life with peace, joy, and an overflowing sense of love. Your warmth and affection have shown me how beautiful it is to love and be loved openly.\n
Every glance, every smile, every moment with you makes me feel that purest form of happiness I never thought possible. I see in you a heart that deserves nothing but sincerity, care, and endless devotion. Not being able to give you the world aches my soul, yet every little gesture I make is my way of showing how deeply I cherish you.\n
I look forward to countless more moments together, building memories, laughter, and love. Happy three months, my love. You are my heart, my joy, my everything. I love you endlessly and beyond words.`;

  function typeLoveLetter() {
    const letter = document.getElementById('loveLetter');
    let index = 0;
    function type() {
      if (index < loveText.length) {
        letter.textContent += loveText[index];
        index++;
        setTimeout(type, 30);
      }
    }
    type();
  }
</script>

